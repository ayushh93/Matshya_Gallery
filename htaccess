<IfModule mod_rewrite.c>
    RewriteEngine on

RewriteCond %{HTTP_HOST} ^(www.)?geneticanepal.com$
RewriteCond %{REQUEST_URI} !^/public/

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^(.*)$ /public/$1

RewriteCond %{HTTP_HOST} ^(www.)?geneticanepal.com$
RewriteRule ^(/)?$ subfolder/index.php [L]
<Files ".env">  
  Require all denied
</Files>
<Files "pull.sh">  
  Require all denied
</Files>
<Files "composer.json">  
  Require all denied
</Files>
<Files "composer.lock">  
  Require all denied
</Files>

</IfModule>
